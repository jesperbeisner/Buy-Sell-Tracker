{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-3 mb-3">
        <div class="row">
            <div class="col">
                <div class="card card-blue">
                    <div class="card-body">
                        <h4 class="card-title">
                            Auswertung von Woche {{ week }} - {{ startDate|date("d.m.Y") }} bis {{ endDate|date("d.m.Y") }}
                        </h4>

                        <table class="table table-hover mt-4 text-center">
                            <thead>
                            <tr>
                                <th scope="col">Produkt</th>
                                <th scope="col">Anzahl</th>
                                <th scope="col">Kosten</th>
                                <th scope="col">Schwarzgeld</th>
                                <th scope="col">Echtes Geld</th>
                                <th scope="col">Bearbeiten</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for result in results %}
                                <form method="POST" id="form-{{ result.id }}">
                                    <input name="product-id" type="hidden" value="{{ result.id }}">
                                    <tr id="product-{{ result.id }}">
                                        <td style="width: 18%">{{ result.name }}</td>
                                        <td style="width: 18%">{{ result.amount|number_format(0, ',', '.') }}</td>
                                        <td style="width: 18%">${{ result.price|number_format(2, ',', '.') }}</td>
                                        <td style="width: 18%">
                                            {% set blackMoneyValue = 0 %}
                                            {% if weekEntries[result.id] is defined %}
                                                {% set blackMoneyValue = weekEntries[result.id].blackMoney %}
                                            {% endif %}
                                            <input
                                                    name="black-money"
                                                    type="text"
                                                    value="{{ blackMoneyValue|number_format(2, ',', '.') }}"
                                                    class="form-control"
                                            >
                                        </td>
                                        <td style="width: 18%">
                                            {% set realMoneyValue = 0 %}
                                            {% if weekEntries[result.id] is defined %}
                                                {% set realMoneyValue = weekEntries[result.id].realMoney %}
                                            {% endif %}
                                            <input
                                                    name="real-money"
                                                    type="text"
                                                    value="{{ realMoneyValue|number_format(2, ',', '.') }}"
                                                    class="form-control"
                                            >
                                        </td>
                                        <td style="width: 10%; cursor: pointer">
                                            <i data-product-id="{{ result.id }}" class="submit-form-icon">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send-check" viewBox="0 0 16 16">
                                                    <path d="M15.964.686a.5.5 0 0 0-.65-.65L.767 5.855a.75.75 0 0 0-.124 1.329l4.995 3.178 1.531 2.406a.5.5 0 0 0 .844-.536L6.637 10.07l7.494-7.494-1.895 4.738a.5.5 0 1 0 .928.372l2.8-7Zm-2.54 1.183L5.93 9.363 1.591 6.602l11.833-4.733Z"/>
                                                    <path d="M16 12.5a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0Zm-1.993-1.679a.5.5 0 0 0-.686.172l-1.17 1.95-.547-.547a.5.5 0 0 0-.708.708l.774.773a.75.75 0 0 0 1.174-.144l1.335-2.226a.5.5 0 0 0-.172-.686Z"/>
                                                </svg>
                                            </i>
                                        </td>
                                    </tr>
                                </form>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col">
                {% if week > 1 %}
                    <a class="btn btn-primary" href="{{ path('evaluation', {week: week - 1}) }}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z"/>
                        </svg>
                        Vorherige Woche
                    </a>
                {% endif %}

                {% if week < 52 %}
                    <a class="btn btn-primary" href="{{ path('evaluation', {week: week + 1}) }}">
                        NÃ¤chste Woche
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right-circle" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5z"/>
                        </svg>
                    </a>
                {% endif %}
            </div>
        </div>
    </div>

    <script src="{{ asset('js/evaluation.js') }}"></script>
{% endblock %}