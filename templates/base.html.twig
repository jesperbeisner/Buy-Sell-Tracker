<!DOCTYPE html>
<html lang="de">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Peaky Blinders{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" type="image/png" href="{{ asset('img/favicon.png') }}" sizes="16x16">
        {% block stylesheets %}
            <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet"/>
            <link href="{{ asset('css/style.css') }}" rel="stylesheet"/>
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
        {% endblock %}
    </head>
    <body>

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a class="navbar-brand" href="{{ path('map') }}">Peaky Blinders</a>
                {% else %}
                    <a class="navbar-brand" href="{{ path('index') }}">Peaky Blinders</a>
                {% endif %}
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navigation-top" aria-controls="navigation-top" aria-expanded="true" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse" id="navigation-top">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('map') }}">Map</a>
                        </li>
                        {% if is_granted('ROLE_SUPER_USER') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('overview') }}">Übersicht</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('add') }}">Hinzufügen</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('evaluation') }}">Auswertung</a>
                            </li>
                        {% endif %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('user') }}">User</a>
                            </li>
                        {% endif %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdown" data-bs-toggle="dropdown" aria-expanded="false">Einstellungen</a>
                            <ul class="dropdown-menu" aria-labelledby="dropdown">
                                {% if is_granted('ROLE_SUPER_USER') %}
                                    <li><a class="dropdown-item" href="{{ path('settings') }}">Verkäufer hinzufügen</a></li>
                                {% endif %}
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    <li>
                                        <a class="dropdown-item" href="{{ path('change-password') }}">Passwort ändern</a>
                                    </li>
                                {% endif %}
                            </ul>
                        </li>
                        {% endif %}
                    </ul>
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item">
                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                <a class="nav-link" href="{{ path('logout') }}">Logout</a>
                            {% else %}
                                <a class="nav-link" href="{{ path('login') }}">Login</a>
                            {% endif %}
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        {% set successMessages = app.flashes('success') %}
        {% if successMessages is not empty %}
            <div class="container mt-3 text-center" id="success-alert-container">
                <div class="row">
                    <div class="col">
                        {% for message in successMessages %}
                            <div class="alert alert-success m-0" role="alert">
                                {{ message }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endif %}

        {% set errorMessages = app.flashes('error') %}
        {% if errorMessages is not empty %}
            <div class="container mt-3 text-center" id="error-alert-container">
                <div class="row">
                    <div class="col">
                        {% for message in errorMessages %}
                            <div class="alert alert-danger m-0" role="alert">
                                {{ message }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endif %}

        {% block body %}{% endblock %}

        {% block javascriptbottom %}
            <script src="{{ asset('js/alert.js') }}"></script>
        {% endblock %}
    </body>
</html>