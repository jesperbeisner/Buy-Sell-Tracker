{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-3 mb-3">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-title">User erstellen</h1>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-lg-12">
                <div class="card card-blue">
                    <div class="card-body">
                        <form method="POST">
                            <div class="mb-3">
                                <label for="username" class="form-label">Username:</label>
                                <input type="text" id="username" name="username" class="form-control" required/>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Passwort:</label>
                                <input type="password" id="password" name="password" class="form-control" required/>
                            </div>
                            <button type="submit" class="btn btn-primary" name="action" value="create">
                                Erstellen
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-lg-12">
                <div class="card card-blue">
                    <div class="card-body">
                        {% if users is not empty %}
                            <table class="table text-center">
                                <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Username</th>
                                    <th scope="col">LÃ¶schen</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% set i = 1 %}
                                {% for user in users %}
                                    <tr>
                                        <th scope="row">{{ i }}</th>
                                        <td>{{ user.username }}</td>
                                        <td class="delete-user">
                                            <i class="delete-icon" style="cursor: pointer" data-user-id="{{ user.id }}">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16"
                                                     height="16"
                                                     fill="currentColor" class="bi bi-trash"
                                                     viewBox="0 0 16 16">
                                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                                    <path fill-rule="evenodd"
                                                          d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                                </svg>
                                            </i>
                                        </td>
                                    </tr>
                                    {% set i = i + 1 %}
                                {% endfor %}
                                </tbody>
                            </table>
                        {% else %}
                            <p class="text-center">
                                Keine User vorhanden. Du wirst die Nachricht normalerweise aber nie sehen?! o.O
                            </p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <form method="POST" class="d-none">
        <input type="hidden" name="user" value="0" id="user-id-input">
        <input type="submit" name="action" value="delete" id="submit-delete-form">
    </form>
{% endblock %}

{% block javascriptbottom %}
    {{ parent() }}
    <script src="{{ asset('js/delete-user.js') }}"></script>
{% endblock %}