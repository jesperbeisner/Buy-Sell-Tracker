{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-3 mb-3">
        <div class="row">
            <div class="col">
                <h1 class="page-title">Verkäufer</h1>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col">
                <div class="card card-blue">
                    <div class="card-body">
                        <h5 class="card-title">
                            Hinzufügen
                        </h5>

                        <form method="POST" class="mt-3">
                            <div class="mb-3">
                                <label for="seller" class="form-label">Name</label>
                                <input type="text" class="form-control" id="seller" name="seller">
                            </div>
                            <button type="submit" class="btn btn-primary" name="action" value="add">
                                Speichern
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-lg-12">
                <div class="card card-blue">
                    <div class="card-body">
                        <h5 class="card-title mb-2">
                            Übersicht
                        </h5>

                        {% if sellers is not empty %}
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th scope="col" class="text-center">#</th>
                                    <th scope="col">Verkäufer</th>
                                    <th scope="col" class="text-center">Löschen</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% set i = 1 %}
                                {% for seller in sellers %}
                                    <tr>
                                        <th scope="row" style="width: 10%" class="text-center">{{ i }}</th>
                                        <td style="width: 80%">{{ seller.name }}</td>
                                        <td class="delete-seller text-center" style="width: 10%">
                                            <i class="fa-solid fa-trash click-icon delete-icon text-danger" data-seller-id="{{ seller.id }}"></i>
                                        </td>
                                    </tr>
                                    {% set i = i + 1 %}
                                {% endfor %}
                                </tbody>
                            </table>
                        {% else %}
                            <p class="text-center">
                                Noch keine Verkäufer vorhanden. Du musst erst welche anlegen.
                            </p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <form method="POST" class="d-none">
            <input type="hidden" name="seller-id" value="0" id="seller-id-input">
            <input type="submit" name="action" value="delete" id="submit-input">
        </form>

    </div>
{% endblock %}

{% block javascript_bot %}
    {{ parent() }}
    <script src="{{ asset('js/delete-seller.js') }}"></script>
{% endblock %}