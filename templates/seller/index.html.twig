{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-3 mb-3">
        <div class="row">
            <div class="col">
                <h1 class="page-title">Verkäufer</h1>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col">
                <div class="card card-blue">
                    <div class="card-body">
                        <h5 class="card-title">
                            Hinzufügen
                        </h5>

                        <form method="POST" class="mt-3">
                            <div class="mb-3">
                                <label for="seller" class="form-label">Name</label>
                                <input type="text" class="form-control" id="seller" name="seller">
                            </div>
                            <button type="submit" class="btn btn-primary" name="action" value="add">
                                Speichern
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-lg-12">
                <div class="card card-blue">
                    <div class="card-body">
                        <h5 class="card-title mb-2">
                            Übersicht
                        </h5>

                        {% if sellers is not empty %}
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th scope="col" class="text-center">#</th>
                                    <th scope="col">Verkäufer</th>
                                    <th scope="col" class="text-center">Löschen</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% set i = 1 %}
                                {% for seller in sellers %}
                                    <tr>
                                        <th scope="row" style="width: 10%" class="text-center">{{ i }}</th>
                                        <td style="width: 80%">{{ seller.name }}</td>
                                        <td class="delete-seller text-center" style="width: 10%">
                                            <i class="delete-icon" style="cursor: pointer" data-seller-id="{{ seller.id }}">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16"
                                                     height="16"
                                                     fill="currentColor" class="bi bi-trash"
                                                     viewBox="0 0 16 16">
                                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                                    <path fill-rule="evenodd"
                                                          d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                                </svg>
                                            </i>
                                        </td>
                                    </tr>
                                    {% set i = i + 1 %}
                                {% endfor %}
                                </tbody>
                            </table>
                        {% else %}
                            <p class="text-center">
                                Noch keine Verkäufer vorhanden. Du musst erst welche anlegen.
                            </p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <form method="POST" class="d-none">
            <input type="hidden" name="seller-id" value="0" id="seller-id-input">
            <input type="submit" name="action" value="delete" id="submit-input">
        </form>

    </div>
{% endblock %}

{% block javascriptbottom %}
    {{ parent() }}
    <script src="{{ asset('js/delete-seller.js') }}"></script>
{% endblock %}